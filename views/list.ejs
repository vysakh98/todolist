<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= title %> </h1>
  </div>

  <div class="box">


  <% newitems.forEach(function (item) { %>

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="check" value="<%=item._id%>" onChange="this.form.submit()"> </input>
        <p><%=item.name%></p>
      </div>
      <input type="hidden" name="hidden" value="<%=title %>"></input>
    </form>
  <%  }) %>


      <form class="item" action="/" method="post">
        <input type="text" name="to" placeholder="New Item" autocomplete="off"></input>
        <button type="submit" name="submit" value="<%= title %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
